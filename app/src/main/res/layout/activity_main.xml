<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:orientation="vertical"
    android:background="@color/RoyalBlue">

    <!-- Main container -->
    <!-- TODO: Replace with RelativeLayout -->
    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/transparent"
        android:hardwareAccelerated="false">

        <!-- First button row -->


        <Button
            android:id="@+id/button_take_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/RoyalBlue"
            android:drawablePadding="8dp"
            android:drawableTop="@android:drawable/ic_menu_camera"
            android:gravity="center_horizontal|top"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:text="@string/btn_take_photo"
            android:textColor="@color/Azure"
            app:layout_constraintEnd_toStartOf="@+id/button_upload_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/button_upload_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:background="@color/RoyalBlue"
            android:drawablePadding="8dp"
            android:drawableTop="@android:drawable/ic_menu_upload"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:text="@string/btn_upload_photo"
            android:textColor="@color/Azure"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_take_photo"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Second button row -->


        <Button
            android:id="@+id/button_myimages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="16dp"
            android:background="@color/RoyalBlue"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/ic_gall_foreground"
            android:gravity="center_horizontal|top"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:text="@string/my_images"
            android:textColor="@color/colorPrimary"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_publicimages"
            app:layout_constraintEnd_toStartOf="@+id/button_publicimages"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_publicimages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="16dp"
            android:background="@color/RoyalBlue"
            android:drawablePadding="8dp"
            android:drawableTop="@mipmap/ic_galleryall_foreground"
            android:gravity="center_horizontal|top"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:text="@string/all_iamges"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_myimages"
            app:layout_constraintTop_toBottomOf="@+id/button_upload_photo" />


        <Button
            android:id="@+id/button_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/RoyalBlue"
            android:drawablePadding="8dp"
            android:gravity="center_horizontal|top"
            android:paddingBottom="16dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="16dp"
            android:text="@string/btn_login"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_myimages" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
